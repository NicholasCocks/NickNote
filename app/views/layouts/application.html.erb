<!DOCTYPE html>
<html>
  <head>
    <title>NickNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser = <%= render(
        "api/users/user.json.jbuilder",
        user: current_user
      ).html_safe %>
      </script>
    <% end %>

    <script type="text/javascript">
      window.sloth = "<%= image_url('sloth3.png') %>";
      window.wyoming = "<%= image_url('wyoming.jpg')%>"
      window.notepad_splash = "<%= image_url('notepad_splash.jpg') %>"
      window.github_logo = "<%= image_url('github_logo.png') %>"
    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
